{
	"name": "snowyflake",
	"version": "0.1.0",
	"description": "A modern implementation Snowflake on TypeScript",
	"license": "MIT",
	"author": {
		"name": "Vladlen (Negezor)",
		"email": "negezor@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/negezor/snowyflake.git"
	},
	"homepage": "https://github.com/negezor/snowyflake#readme",
	"bugs": "https://github.com/negezor/snowyflake/issues",
	"keywords": [
		"snowflake",
		"twitter",
		"bigint",
		"typescript",
		"generator"
	],
	"files": [
		"lib"
	],
	"main": "lib/index",
	"module": "lib/index.mjs",
	"types": "lib/index.d.ts",
	"engines": {
		"node": ">=10.0.0"
	},
	"devDependencies": {
		"@types/jest": "^24.0.15",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"dts-bundle-generator": "^3.1.0",
		"eslint": "5",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.17.3",
		"jest": "^24.8.0",
		"rollup": "^1.16.2",
		"rollup-plugin-typescript": "^1.0.1",
		"ts-jest": "^24.0.2",
		"tslib": "^1.10.0",
		"typedoc": "^0.14.2",
		"typedoc-plugin-markdown": "^2.0.6",
		"typescript": "^3.5.2"
	},
	"scripts": {
		"prepare": "yarn run rollup:build && yarn run types:generate && yarn run test",
		"rollup:build": "rollup -c",
		"rollup:watch": "yarn run rollup:build -- --watch",
		"types:generate": "dts-bundle-generator -o lib/index.d.ts src/index.ts",
		"test": "yarn run test:jest && yarn run test:eslint",
		"test:jest": "jest --config jest.config.json --no-cache",
		"test:eslint": "eslint --ext .ts --ignore-path .gitignore src/**/*.ts",
		"docs:generate": "typedoc --theme markdown --out docs --excludeExternals --readme none src"
	}
}
